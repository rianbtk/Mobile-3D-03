<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <TextView
        android:id="@+id/noRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Your phone ain&apos;t rooted. Uninstall this app as fast as you can!!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red"
        android:visibility="gone" />
    
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" />
    
    <TextView
        android:id="@+id/checkingRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Cek sistem Root"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red" />
    
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
        
        <TextView 
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header"
            android:textColor="@color/red"
            android:textSize="23sp" />
        
        <TextView
            android:id="@+id/versionHeader" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android Version :"
            android:textColor="@color/red"
            android:layout_marginTop="25dp"
            android:textSize="17sp" />
        
        <EditText 
            android:id="@+id/versionEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/lightRed" />
        
        <TextView
            android:id="@+id/modelHeader" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model Name :"
            android:textColor="@color/red"
            android:layout_marginTop="22dp"
            android:textSize="17sp" />
        
        <EditText 
            android:id="@+id/modelEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/lightRed" />
        
        <TextView
            android:id="@+id/buildHeader" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build Number :"
            android:textColor="@color/red"
            android:layout_marginTop="22dp"
            android:textSize="17sp" />
        
        <EditText 
            android:id="@+id/buildEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/lightRed" />
        
        <TextView
            android:id="@+id/buildDateHeader" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand Name :"
            android:textColor="@color/red"
            android:layout_marginTop="22dp"
            android:textSize="17sp" />
        
        <EditText 
            android:id="@+id/buildDateEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/lightRed" />

        <TextView
            android:id="@+id/buildDevicesHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devices Name :"
            android:textColor="@color/red"
            android:layout_marginTop="22dp"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/buildDevicesEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/lightRed" />

        <TextView
            android:id="@+id/versionsistemHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version Sistem Name :"
            android:textColor="@color/red"
            android:layout_marginTop="22dp"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/versionsistemEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/lightRed" />
        
        <Button 
            android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:background="@drawable/button"
            android:text="Click dan Setujui "
            android:onClick="commit" />
        
    </LinearLayout>
    
</RelativeLayout>
    
</ScrollView>
</LinearLayout>
